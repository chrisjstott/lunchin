<div class="col-md-2">
  <div class="business-photo" style="background-image: url(<%= business.escape('photo_url') %>)">
  </div>
</div>

<div class="business-info col-md-9">
  <a href="#businesses/<%= business.id %>">
    <b><%= business.escape('name') %></b>
  </a>
  <img src="https://s3-us-west-1.amazonaws.com/lunchin/assets/<%= business.escape('average_rating') %>stars.png"
       alt="<%= business.escape('average_rating') %> stars"
       class="small-rating-image"/>
  <ul>
    <li><%= opening.escape('location') %></li>
    <li><%= opening.escape('distance') %> miles away</li>
  </ul>
</div>
