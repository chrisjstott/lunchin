
<div class="header-content group">
  <div class="col-md-2">
  <a href="#">
    <img class="logo" src="https://s3-us-west-1.amazonaws.com/lunchin/assets/logo-wr.png" alt="logo" height="65px" />
  </a>
  </div>
  
  <form class="search-bar">

  <div class="col-md-4">
    <input
      type="text"
      class="search-input form-control"
      name="location"
      placeholder="Search for food trucks near..."
      value="<%= location %>"
    >
  </div>
  <div class="col-md-4">
    <input
      type='text'
      class='search-input form-control datetimepicker'
      name='time'
      <% if(!time || time === 'today') { %>
        placeholder='Today'
      <% }; %>
    >
  </div>

  <div class="col-md-1">
    <button type="submit" class="btn btn-search" aria-label="Search">
      <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
    </button>
  </div>

  </form>
  
  <div class="col-md-1">
  <a href="session/new" class="btn btn-primary btn-login">Log In</a>
  </div>
</div>
