<form class="" action="users_url" method="post">
  <div class="form-inline form-group">
    <label for="user_first_name">First Name</label>
    <input
      type="text"
      name="user[first_name]"
      value="<%= @user.first_name %>"
      id="user_first_name"
      class="form-control"
    >
  <!-- </div>

  <div class="form-group"> -->
    <label for="user_last_name">Last Name</label>
    <input
      type="text"
      name="user[last_name]"
      value="<%= @user.last_name %>"
      class="form-control"
      id="user_last_name"
    >
  </div>

  <div class="form-inline form-group">
    <label for="user_email">Email Address</label>
    <input
      type="text"
      name="user[email]"
      value="<%= @user.email %>"
      class="form-control"
      id="user_email"
    >
  </div>

  <div class="form-inline form-group">
    <label for="user_password">Password</label>
    <input
      type="password"
      name="user[password]"
      id="user_password"
      class="form-control"
    >
  </div>

  <div class="form-inline">
    <label for="user_location">Your city</label>
    <input
      type="text"
      name="user[location]"
      value="<%= @user.location %>"
      id="user_location"
      class="form-control"
    >
  </div>

</form>
