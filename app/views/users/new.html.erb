<form class="" action="<%= users_url %>" method="post">

  <%= render "shared/auth_token" %>

  <div class="form-inline form-group">
    <label class="sr-only" for="user_first_name">First Name</label>
    <input
      type="text"
      name="user[first_name]"
      value="<%= @user.first_name %>"
      id="user_first_name"
      class="form-control"
      placeholder="First Name">

    <label class="sr-only" for="user_last_name">Last Name</label>
    <input
      type="text"
      name="user[last_name]"
      value="<%= @user.last_name %>"
      class="form-control"
      placeholder="Last Name"
      id="user_last_name">
  </div>

  <%= render "shared/email_password" %>

  <div class="form-inline form-group">
    <label class="sr-only" for="user_location">Zip Code</label>
    <input
      type="text"
      name="user[zip_code]"
      value="<%= @user.zip_code %>"
      id="user_location"
      class="form-control"
      placeholder="Zip Code">
  </div>

  <input type="submit" class="btn btn-default" value="Submit!">

</form>
