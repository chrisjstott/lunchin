<div class="form-inline form-group">

  <label class="sr-only" for="user_email">Email Address</label>
  <input
    type="text"
    name="user[email]"
    Xvalue="<%= @user ? @user.email : nil %>"
    class="form-control"
    placeholder="Email Address"
    value="chris@email.com"
    id="user_email"
  >
</div>

<div class="form-inline form-group">
  <label class="sr-only" for="user_password">Password</label>
  <input
    type="password"
    name="user[password]"
    id="user_password"
    class="form-control"
    placeholder="Password"
    value="password"
  >
</div>
